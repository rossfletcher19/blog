

{{#partial "content"}}
   <div class=jumbotron>
   <h1>Post list!</h1>
   </div>
   <div class=well>
   {{#if posts}} <!--if posts exist, then -->
       {{#each posts }} <!--loop-->

        <p>Current post:</p>
        <p>{{ content }}</p> <!--show-->

       {{/each}}
   {{else}} <!--no posts!-->
    <p>No posts!</p>
    </div>
   {{/if}}

   <div class=well>
   <p>Add a new Post:</p>

   <form action="/posts/new" method="post">
       <label for="content">Post Content</label>
       <input id="content" name="content" type="text">

       <button type="submit" class="btn btn-default">Add new blog post</button>
   </form>
   </div>
{{/partial}}

{{> layout.hbs}}